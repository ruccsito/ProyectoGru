
@{
    ViewBag.Title = "Finalizados";
}

@model  IEnumerable<ProyectoGru.Data.Trabajo>

<!-- Modal -->
<div class="modal fade" id="newJobModal" tabindex="-1" role="dialog" aria-labelledby="newJobModal" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel"></h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body text-center">
                <p>El trabajo se agrego correctamente a la queue.</p>
            </div>
            <div class="modal-footer justify-content-center">
                <button type="button" class="btn btn-outline-success" data-dismiss="modal">Aceptar</button>
            </div>
        </div>
    </div>
</div>

<table class="table table-hover">
    <thead>
        <tr>
            <th>#</th>
            <th>Source</th>
            <th>Target</th>
            <th>Transcoder</th>
            <th>Video Codec</th>
            <th>Audio Codec</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var t in Model)
        {
            <tr>
                <th scope="row">@t.ID</th>
                <td>@t.sourceFile</td>
                <td>@t.targetFile</td>
                <td>@t.transcoder</td>
                <td>@t.videoCodec</td>
                <td>@t.audioCodec</td>
            </tr>
        }
    </tbody>
</table>