
@{
    ViewBag.Title = "Generador";

}

<div class="generador">
    <form action="/Trabajos/Crear" method="post">
        @* Source Files *@
        <div class="form-group row">
            <label for="sourceFile" class="col-sm-2 col-form-label">Archivo de origen</label>
            <div class="col-sm-10">
                <input type="text" class="form-control" name="sourceFile" placeholder="Seleccionar..">
            </div>
        </div>
        <div class="form-group row">
            <label for="targetFile" class="col-sm-2 col-form-label">Archivo de destino</label>
            <div class="col-sm-10">
                <input type="text" class="form-control" name="targetFile" placeholder="Seleccionar..">
            </div>
        </div>
        <hr />
        @* Transcoders / Containers *@
        <div class="form-group row">
                <label class="col-form-legend col-sm-2">Transcoders</label>
                <div class="col-sm-4">
                    <select class="custom-select" name="transcoder" id="transcodeSelect">
                        <option disabled selected>Seleccionar transcoder</option>                        
                        @foreach (var i in ViewBag.transcoders)
                        {
                            <option value="@i">@i</option>
                        }
                    </select>
                </div>
                <label class="col-form-legend col-sm-2">Containers</label>
                <div class="col-sm-4" id="containers">
                    <select class="custom-select" name="container" id="containersSelect">
                        <option disabled selected>Seleccionar container</option>
                    </select>
                </div>
        </div>
        <hr />
        @* Video Settings *@
        <div class="form-group row">
            <div class="col-md-6">
                <h6>Configuracion de video</h6>
            </div>
            <div class="col-md-6"></div>
        </div>
        <div class="form-group row">
            <div class="form-group col-md-3">
                <label for="videoCodec" class="col-form-label">Codec</label>
                <select class="form-control" name="videoCodec" id="videoCodecs">
                    <option disabled selected>Seleccionar</option>
                </select>
            </div>
            <div class="form-group col-md-3">
                <label for="height" class="col-form-label">Resolucion Horizontal</label>
                <select name="height" class="form-control">
                    <option disabled selected>Seleccionar</option>
                    <option value="1024">1024</option>
                    <option value="1080">1080</option>
                </select>
            </div>
            <div class="form-group col-md-3">
                <label for="width" class="col-form-label">Resolucion Vertical</label>
                <select name="width" class="form-control">
                    <option disabled selected>Seleccionar</option>
                    <option value="768">768</option>
                    <option value="1920">1920</option>
                </select>
            </div>
            <div class="form-group col-md-3">
                <label for="videoBitrate" class="col-form-label">Bitrate</label>
                <select name="videoBitrate" class="form-control">
                    <option disabled selected>Seleccionar</option>
                    <option value="10000">10000</option>
                    <option value="20000">20000</option>
                    <option value="30000">30000</option>
                </select>
            </div>
        </div>
        <hr />
        @* Audio Settings *@
        <div class="form-group row">
            <div class="col-md-6">
                <h6>Configuracion de audio</h6>
            </div>
            <div class="col-md-6"></div>
        </div>
        <div class="form-group row">
            <div class="form-group col-md-3">
                <label for="audioCodec" class="col-form-label">Codec</label>
                <select class="form-control" name="audiocodec" id="audioCodecs">
                    <option disabled selected>Seleccionar</option>
                </select>
            </div>
            <div class="form-group col-md-3">
                <label for="channels" class="col-form-label">Canales</label>
                <select name="channels" class="form-control">
                    <option disabled selected>Seleccionar</option>
                    <option value="1">1</option>
                    <option value="2">2</option>
                    <option value="3">3</option>
                    <option value="4">4</option>
                    <option value="5">5</option>
                    <option value="6">6</option>
                    <option value="7">7</option>
                    <option value="8">8</option>
                    <option value="9">9</option>
                    <option value="10">10</option>
                    <option value="11">11</option>
                    <option value="12">12</option>
                    <option value="13">13</option>
                    <option value="14">14</option>
                    <option value="15">15</option>
                    <option value="16">16</option>
                </select>
            </div>
            <div class="form-group col-md-3">
                <label for="sampling" class="col-form-label">Muestreo</label>
                <select name="sampling" class="form-control">
                    <option disabled selected>Seleccionar</option>
                    <option value="100">100</option>
                    <option value="200">200</option>
                    <option value="300">300</option>
                    <option value="400">400</option>
                </select>
            </div>
            <div class="form-group col-md-3">
                <label for="audioBitrate" class="col-form-label">Bitrate</label>
                <select name="audioBitrate" class="form-control">
                    <option disabled selected>Seleccionar</option>
                    <option value="10000">10000</option>
                    <option value="20000">20000</option>
                    <option value="30000">30000</option>
                </select>
            </div>
        </div>
        @* Button *@
        <div class="form-group text-center">
            <button type="submit" class="btn btn-outline-primary">Enviar</button>
        </div>
    </form>
</div>