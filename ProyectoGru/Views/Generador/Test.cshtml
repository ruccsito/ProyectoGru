
@{
    ViewBag.Title = "Generador";

}

@model ProyectoGru.Models.FormData

<div class="generador">
    <form action="/Trabajos/Crear" method="post">
        @* Source Files *@
        <div class="form-group row">
            <label for="sourceFile" class="col-sm-2 col-form-label">Archivo de origen</label>
            <div class="col-sm-10">
                <input type="text" class="form-control" name="sourceFile" placeholder="Seleccionar..">
            </div>
        </div>
        <div class="form-group row">
            <label for="targetFile" class="col-sm-2 col-form-label">Archivo de destino</label>
            <div class="col-sm-10">
                <input type="text" class="form-control" name="targetFile" placeholder="Seleccionar..">
            </div>
        </div>
        <hr />
        @* Transcoders / Containers *@
        <div class="form-group row">
                <label class="col-form-legend col-sm-2">Transcoders</label>
                <div class="col-sm-4">
                    <select class="custom-select" id="transcodeSelect">
                        <option disabled selected>Seleccionar transcoder</option>                        
                        @foreach (var i in ViewBag.transcoders)
                        {
                            <option value="@i">@i</option>
                        }
                    </select>
                </div>
                <label class="col-form-legend col-sm-2">Containers</label>
                <div class="col-sm-4" id="containers">
                    <select class="custom-select" id="containersSelect">
                        <option disabled selected>Seleccionar container</option>
                    </select>
                </div>
        </div>
        <hr />
        @* Video Settings *@
        <div class="form-group row">
            <div class="col-md-6">
                <h6>Video Settings</h6>
            </div>
            <div class="col-md-6"></div>
        </div>
        <div class="form-group row">
            <div class="form-group col-md-3">
                <label for="videoCodec" class="col-form-label">Codec</label>
                <select name="videoCodec" class="form-control" id="videoCodecs">
                    <option disabled selected>Seleccionar codec</option>
                    <option value="H265">H264</option>
                    <option value="H265">H265</option>
                    <option value="PV9">PV9</option>
                </select>
            </div>
            <div class="form-group col-md-3">
                <label for="height" class="col-form-label">Height</label>
                <select name="height" class="form-control">
                    Choose
                    <option value="1024">1024</option>
                    <option value="1080">1080</option>
                </select>
            </div>
            <div class="form-group col-md-3">
                <label for="width" class="col-form-label">Width</label>
                <select name="width" class="form-control">
                    Choose
                    <option value="768">768</option>
                    <option value="1920">1920</option>
                </select>
            </div>
            <div class="form-group col-md-3">
                <label for="videoBitrate" class="col-form-label">Bitrate</label>
                <select name="videoBitrate" class="form-control">
                    Choose
                    <option value="10000">10000</option>
                    <option value="20000">20000</option>
                    <option value="30000">30000</option>
                </select>
            </div>
        </div>
    </form>
</div>